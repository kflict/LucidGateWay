# Create a folder
$ mkdir actions-runner && cd actions-runner# Download the latest runner package
$ curl -o actions-runner-osx-x64-2.281.1.tar.gz -L https://github.com/actions/runner/releases/download/v2.281.1/actions-runner-osx-x64-2.281.1.tar.gz# Optional: Validate the hash
$ echo "c10bfd8f01adfdda5f3e108547eacc862cdb6905e773ecb3a1717d1804756579  actions-runner-osx-x64-2.281.1.tar.gz" | shasum -a 256 -c# Extract the installer
$ tar xzf ./actions-runner-osx-x64-2.281.1.tar.gz
